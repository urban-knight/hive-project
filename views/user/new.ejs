<% include ../partials/header %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1 style='margin-bottom: 30px;'>Регистрация нового пользователя</h1>
  </div>
  <div class="panel-body">
    <form  class="form-horizontal" id="registrationForm"  method="post">
        <div class="form-group" >
          <label for="name" class="col-sm-4 control-label">Имя пользователя:</label>
          <div class="col-sm-6">
           <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
            <input type="text" name="userName" id="userName" class="form-control" placeholder="Имя пользователя" required>
          </div>
        </div>
      </div>
      <div class="form-group" >
        <label for="email"  class="col-sm-4 control-label">Email:</label>
        <div class="col-sm-6">
         <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
          <input type="email" name="email" id="email" class="form-control" placeholder="Адрес почтового ящика" required>
        </div>
      </div>
    </div>
    <div class="form-group" >
      <label for="password" class="col-sm-4 control-label">Пароль:</label>
      <div class="col-sm-6">
       <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
        <input type="password" id="password" name="password" class="form-control" required placeholder="Пароль">
      </div>
    </div>
  </div>
  <div class="form-group" >
    <label for="password_confirm" class="col-sm-4 control-label">Повторите пароль:</label>
    <div class="col-sm-6">
     <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
      <input type="password" name="password_confirm" id="password_confirm" class="form-control" placeholder="Повторите пароль" required>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-4 col-sm-6">
    <div class="checkbox">
      <label id="LabelConfirm" for="CheckBoxConfirm">
        <input type="checkbox" name="CheckBoxConfirm" id="CheckBoxConfirm" required="required" />
        Я принимаю <a href="#">Условия эксплуатации</a>
      </label>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-4 col-sm-6">
    <button id='submit' type="submit" class="btn btn-primary">Регистрация</button>
  </div>
</div>
</form>
</div>
</div>


<% include ../partials/footer %>
<script    type="text/javascript" src="../static/lib/js/validator.js"></script>
<script    type="text/javascript" src="../static/js/user/new.js"></script>


